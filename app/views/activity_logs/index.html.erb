<div class='container'>

<p id="notice"><%= notice %></p>

<h1>Activity Logs</h1>

<table>
  <thead>
    <tr>
      <th>Activity type</th>
      <th>Minutes</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_logs.each do |activity_log| %>
      <tr>
        <td><%= activity_log.activity_type %></td>
        <td><%= activity_log.duration %></td>
        <td><%= DateTime.parse(activity_log.date.to_s).strftime("%d %b %Y") %></td>
        <td><%= link_to 'Edit', edit_activity_log_path(activity_log) %></td>
        <td><%= link_to 'Destroy', activity_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>