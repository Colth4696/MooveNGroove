<%= form_with(model: activity_log, local: true) do |form| %>
  <% if activity_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(activity_log.errors.count, "error") %> prohibited this activity_log from being saved:</h2>

      <ul>
      <% activity_log.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= form.label :activity_type  %>
  <%= form.select :activity_type, [['Rock Climbing', 'climbing'], ['Crossfit', 'crossfit'], ['Cycling', 'cycling'], 
  ['Hiking', 'hiking'], ['Martial Arts', 'martialarts'], ['Meditation', 'meditation'], ['Running', 'running'], ['Swimming', 'swimming'],
  ['Walking', 'walking'], ['Yoga', 'yoga']] %>   
  </div>

  <div class="field">
    <%= form.label :duration  %>
    <%= form.text_field :duration %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
